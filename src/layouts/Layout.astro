---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '@fontsource/merriweather';

import '../styles/reset.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="spinning-border"></div>
    <div id="content">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --font-size: 14px;
    --font-size-h1: 24px;
    --font-size-h2: 32px;
    --font-family: sans-serif;
    --font-family-serif: 'Merriweather', serif;

    --yellow: #f0da9e;
    --yellow-pale: #efe0b8;
    --yellow-dark: #b0891c;
    --red: #f9b3b5;
    --red-dark: #cc3338;
    --green: #afc5ae;
    --green-dark: #546654;
    --black: #363636;
    --gray: #e9eaeb;
    --white: #fff;

    --background: var(--gray);
    --foreground: var(--black);
    --foreground-accent: var(--green-dark);
    --foreground-accent-alt: var(--green);

    --transition-duration: 200ms;
    --transition-timing-function: ease;

    --spinning-border-color-1: var(--yellow);
    --spinning-border-color-2: var(--green);
    --spinning-border-color-3: var(--red);

    --max-content-width: 60rem;

    --spacing-1: 0.5rem;
    --spacing-2: 1rem;
    --spacing-3: 2rem;
    --spacing-4: 4rem;

    --border-radius: 0.75rem;

    --layout-spacing: var(--spacing-2);
  }

  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background: var(--foreground-accent);
    color: var(--background);
  }

  html {
    font-family: var(--font-family);
    color: var(--foreground);
  }

  html,
  body {
    width: 100%;
    max-width: 100vw;
    height: 100%;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  body {
    padding: var(--layout-spacing);
  }

  #content {
    flex: 1;
    width: 100%;
    height: 100%;
    max-width: var(--max-content-width);
    background-color: var(--background);
    border-radius: var(--border-radius);
    padding: var(--spacing-2);
    display: flex;
    flex-direction: column;
    box-shadow: 5px 5px 30px 0 rgba(0, 0, 0, 0.5);
  }

  #spinning-border {
    position: fixed;
    top: 50%;
    left: 50%;
    width: calc(max(100vw, 100vh) * 1.5);
    height: calc(max(100vw, 100vh) * 1.5);
    background: linear-gradient(
      90deg,
      var(--spinning-border-color-1) 0,
      var(--spinning-border-color-2) 35%,
      var(--spinning-border-color-3) 100%
    );
    z-index: -1;
    animation: spin 5s linear infinite;
    transform: translate(-50%, -50%);
  }

  @keyframes spin {
    0% {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg);
    }
  }

  main {
    flex: 1;
  }

  h1 {
    font-size: var(--font-size-h1);
  }

  h2 {
    font-size: var(--font-size-h2);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.2;
    font-family: var(--font-family-serif);
  }

  p {
    margin-bottom: var(--spacing-2);
  }

  strong {
    font-weight: 700;
    color: var(--foreground-accent);
  }

  a {
    color: var(--foreground-accent);
    text-decoration: none;
    padding-bottom: 1px;
    border-bottom: 1px solid;
    border-color: var(--foreground-accent-alt);
    transition-duration: var(--transition-duration);
    transition-timing-function: var(--transition-timing-function);
    transition-property: border-color;
  }

  a:hover,
  a:focus-visible {
    outline: none;
    border-color: var(--foreground-accent);
  }

  a:focus-visible {
    background-color: var(--foreground-accent);
    color: var(--background);
    border-radius: 4px;
    border-color: transparent;
    margin: -3px -5px;
    padding: 3px 5px 4px;
  }

  @media (min-width: 768px) {
    :root {
      --font-size: 16px;
      --font-size-h1: 48px;
      --font-size-h2: 32px;
      --layout-spacing: var(--spacing-4);
    }
  }
</style>
